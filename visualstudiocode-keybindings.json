// Place your key bindings in this file to override the defaults
[
    { "key": "cmd+t", "command": "workbench.action.splitEditor" },
    { "key": "shift+cmd+[", "command": "workbench.action.previousEditor" },
    { "key": "shift+cmd+]", "command": "workbench.action.nextEditor" },

    { "key": "cmd+[", "command": "cursorUndo", "when": "textInputFocus" },
    { "key": "cmd+]", "command": "cursorRedo", "when": "textInputFocus" },
    // { "key": "cmd+[", "command": "workbench.action.navigateBack", "when": "editorTextFocus" },
    // { "key": "cmd+]", "command": "workbench.action.navigateForward", "when": "editorTextFocus" },

    { "key": "cmd+g", "command": "editor.action.startFindReplaceAction", "when": "editorTextFocus" },

    { "key": "cmd+;", "command": "workbench.action.editor.changeLanguageMode", "when": "editorTextFocus" },

    { "key": "cmd+i", "command": "editor.action.trimTrailingWhitespace", "when": "editorTextFocus" },

    { "key": "cmd+u", "command": "undo", "when": "editorTextFocus" },
    { "key": "cmd+r", "command": "redo", "when": "editorTextFocus" },

    { "key": "cmd+d", "command": "editor.action.deleteLines", "when": "editorTextFocus" },
    { "key": "cmd+k", "command": "deleteAllRight", "when": "editorTextFocus" },

    { "key": "cmd+l", "command": "editor.action.copyLinesUpAction", "when": "editorTextFocus" },

    { "key": "cmd+e", "command": "cursorEnd", "when": "editorTextFocus" },

    { "key": "cmd+left", "command": "cursorWordLeft", "when": "editorTextFocus" },
    { "key": "shift+cmd+left", "command": "cursorWordLeftSelect", "when": "editorTextFocus" },
    { "key": "cmd+right", "command": "cursorWordRight", "when": "editorTextFocus" },
    { "key": "shift+cmd+right", "command": "cursorWordRightSelect", "when": "editorTextFocus" },
    { "key": "cmd+down", "command": "cursorPageDown", "when": "editorTextFocus" },
    { "key": "shift+cmd+down", "command": "cursorPageDownSelect", "when": "editorTextFocus" },
    { "key": "cmd+up", "command": "cursorPageUp", "when": "editorTextFocus" },
    { "key": "shift+cmd+up", "command": "cursorPageUpSelect", "when": "editorTextFocus" },
]
